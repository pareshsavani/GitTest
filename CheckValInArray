// to check weather array contains a specific value
import java.util.Scanner;

public class CheckValInArray {

	public static void main(String[] args) 
	{
		int arr[]=new int[5],checkval;
		Scanner sc=new Scanner(System.in);
		
		System.out.print("Please Enter 5 number::");
		for(int i=0;i<5;i++)
		{
			arr[i]=sc.nextInt();			
		}

		System.out.print("Please enter the value you want to check with an array");
		checkval=sc.nextInt();
		
	
		
		for (int i = 0; i < 5; i++) 
		{
			if (checkval == arr[i]++) 
			{
				System.out.print("Entered value exists in the array");				
			}
			else
			{
				System.out.print("Entered value doesn't belongs to the array");
			}
			break;
		}
		//System.out.print("Entered value doesn't belongs to the array");
		sc.close();
	}

}
