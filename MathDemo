import java.util.Scanner;

public class MathDemo {

	public static void main(String args[])
	{
		int n1,n2,choice;
		float ans;
		Scanner ch= new Scanner(System.in);

		System.out.print("Please enyer first number:");
		n1=ch.nextInt();

		System.out.print("Please enyer second number:");
		n2=ch.nextInt();

		System.out.println("1 for Addition");
		System.out.println("2 for Subtraction");
		System.out.println("3 for Division");
		System.out.println("4 for Multiplition");


		System.out.print("Please enyer your choice:");
		choice=ch.nextInt();

		switch(choice)
		{
		case 1:
			ans=n1+n2;
			System.out.println("Your answer is:"+ans);
			break;
		case 2:
			ans=n1-n2;
			System.out.println("Your answer is:"+ans);
			break;
		case 3:
			ans=n1/n2;
			System.out.println("Your answer is:"+ans);
			break;
		case 4:
			ans=n1*n2;
			System.out.println("Your answer is:"+ans);
			break;
		default :
			System.out.println("Your choice is wrong");		
		}
		
		System.out.print("Program ends...");
		ch.close();
	}
}

